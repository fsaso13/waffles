<p id="notice"><%= notice %></p>

<h1>Listing Room Petitions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Room</th>
      <th>Occupied</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_petitions.each do |room_petition| %>
      <tr>
        <td><%= room_petition.user_id %></td>
        <td><%= room_petition.room_id %></td>
        <td><%= room_petition.occupied %></td>
        <td><%= link_to 'Show', room_petition %></td>
        <td><%= link_to 'Edit', edit_room_petition_path(room_petition) %></td>
        <td><%= link_to 'Destroy', room_petition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

